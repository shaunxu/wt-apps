{
  "manifest_version": 2,
  "name": "Worktile Extension for Chrome",
  "description": "Chrome extension for worktile to add task, topic and document easily.",
  "version": "1.0",
  "background": {
    "scripts": ["lib/jquery/jquery.min.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "app.html",
    "default_title": "Worktile"
  },
  "permissions": [
    "tabs",
    "identity",
    "cookies",
    "*://*.worktile.com/*"
  ],
  "web_accessible_resources": [
    "options.html"
  ],
  "options_page": "options.html"
}
