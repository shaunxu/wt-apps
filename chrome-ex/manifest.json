{
  "manifest_version": 2,
  "name": "Worktile Extension for Chrome",
  "description": "Quickly add tasks and topics to Worktile from any web page.",
  "version": "0.9.150817",
  "background": {
    "scripts": ["lib/jquery/jquery.min.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "app.html",
    "default_title": "Worktile"
  },
  "permissions": [
    "tabs",
    "identity",
    "cookies",
    "*://*.worktile.com/*",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "options.html"
  ],
  "options_page": "options.html"
}
