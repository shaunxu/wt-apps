{
  "manifest_version": 2,

  "name": "Worktile Chrome Extension",
  "description": "Chrome extension for worktile to add task, topic and document easily.",
  "version": "1.0",
  "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "app.html",
    "default_title": "Worktile"
  },
  "permissions": [
    "tabs",
    "identity",
    "cookies",
    "*://*.worktile.com/*"
  ]
}
